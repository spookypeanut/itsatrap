#!/usr/bin/env python

from itsatrap.trap import Trap
from time import sleep


def main():
    trap = Trap(photos=False, verbose=True)
    print("Starting trap")
    trap.start_trap()
    try:
        while True:
            sleep(100)
    except KeyboardInterrupt:
        print("Stopping trap")
        trap.stop_trap()

if __name__ == "__main__":
    main()
